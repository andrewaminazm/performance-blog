---
interface Props {
  title: string;
  description?: string;
}
const { title, description = "Performance testing blog: JMeter, k6, Postman, metrics, and how to get started." } = Astro.props;
const currentPath = Astro.url.pathname;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
    <title>{title} | Performance Test Blog</title>
    <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />
    <style is:global>
      :root {
        --bg: #08090c;
        --bg-elevated: #0f1015;
        --surface: #161820;
        --surface-hover: #1e2029;
        --border: #252730;
        --border-subtle: #1c1e27;
        --text: #e8e9f0;
        --text-soft: #a8aab8;
        --muted: #60626e;
        --accent: #7c6af7;
        --accent-2: #6ee7b7;
        --accent-hover: #9d8fff;
        --accent-muted: rgba(124, 106, 247, 0.12);
        --accent-glow: rgba(124, 106, 247, 0.25);
        --radius: 12px;
        --radius-sm: 7px;
        --radius-xs: 4px;
        --shadow: 0 4px 32px rgba(0, 0, 0, 0.4);
        --shadow-sm: 0 2px 12px rgba(0, 0, 0, 0.25);
      }

      * { box-sizing: border-box; }

      html { scroll-behavior: smooth; }

      body {
        margin: 0;
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
        background: var(--bg);
        color: var(--text);
        line-height: 1.7;
        font-size: 1rem;
        -webkit-font-smoothing: antialiased;
      }

      a {
        color: var(--accent);
        text-decoration: none;
        transition: color 0.15s ease;
      }
      a:hover { color: var(--accent-hover); }

      code {
        background: var(--surface);
        color: #a8f0c8;
        padding: 0.18em 0.45em;
        border-radius: var(--radius-xs);
        font-size: 0.88em;
        font-weight: 500;
        font-family: 'JetBrains Mono', 'Fira Code', monospace;
        border: 1px solid var(--border-subtle);
      }

      pre {
        background: var(--surface);
        padding: 1.25rem 1.5rem;
        border-radius: var(--radius);
        overflow-x: auto;
        border: 1px solid var(--border);
        position: relative;
      }
      pre code {
        background: none;
        padding: 0;
        color: var(--text-soft);
        border: none;
        font-size: 0.9em;
      }

      /* Prose */
      .prose { max-width: 68ch; }
      .prose h2 {
        font-size: 1.3rem;
        margin-top: 2.25rem;
        margin-bottom: 0.75rem;
        font-weight: 600;
        letter-spacing: -0.015em;
        color: var(--text);
        padding-bottom: 0.4rem;
        border-bottom: 1px solid var(--border-subtle);
      }
      .prose h3 { font-size: 1.1rem; margin-top: 1.75rem; margin-bottom: 0.5rem; font-weight: 600; color: var(--text); }
      .prose h4 { font-size: 1rem; margin-top: 1.25rem; margin-bottom: 0.4rem; font-weight: 600; color: var(--text-soft); }
      .prose p { margin-bottom: 1rem; color: var(--text-soft); }
      .prose ul, .prose ol { margin: 0.75rem 0 1.25rem 1.5rem; color: var(--text-soft); }
      .prose li { margin: 0.4rem 0; }
      .prose strong { color: var(--text); font-weight: 600; }
      .prose table { width: 100%; border-collapse: collapse; margin: 1.25rem 0; font-size: 0.93rem; border-radius: var(--radius-sm); overflow: hidden; border: 1px solid var(--border); }
      .prose th, .prose td { border: 1px solid var(--border); padding: 0.65rem 1rem; text-align: left; }
      .prose th { background: var(--surface); color: var(--muted); font-weight: 600; font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.04em; }
      .prose td { color: var(--text-soft); }
      .prose hr { border: none; height: 1px; background: var(--border); margin: 2.5rem 0; }
      .prose blockquote {
        border-left: 3px solid var(--accent);
        margin: 1.5rem 0;
        padding: 0.75rem 1.25rem;
        background: var(--accent-muted);
        border-radius: 0 var(--radius-sm) var(--radius-sm) 0;
        color: var(--text-soft);
      }
      .prose a { color: var(--accent); }
      .prose a:hover { color: var(--accent-hover); }
    </style>
  </head>
  <body>
    <header class="site-header">
      <nav class="site-nav">
        <a href="/" class="site-logo">
          <span class="logo-icon">⚡</span>
          <span class="logo-text">PerfBlog</span>
        </a>
        <div class="nav-links">
          <a href="/blog/" class={currentPath.startsWith('/blog') ? 'nav-link active' : 'nav-link'}>Posts</a>
          <a href="/tools/" class={currentPath.startsWith('/tools') ? 'nav-link active' : 'nav-link'}>Tools</a>
          <a href="/#topics" class="nav-link">Topics</a>
          <a href="/about/" class={currentPath.startsWith('/about') ? 'nav-link active' : 'nav-link'}>About</a>
        </div>
        <a
          href="https://www.linkedin.com/in/andrew-amin-48763a194/"
          target="_blank"
          rel="noopener noreferrer"
          class="linkedin-badge"
          aria-label="Andrew Amin on LinkedIn"
        >
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
          <span>Andrew Amin</span>
        </a>
      </nav>
    </header>
    <main class="site-main">
      <slot />
    </main>
    <footer class="site-footer">
      <div class="footer-inner">
        <div class="footer-left">
          <span class="footer-logo">⚡ PerfBlog</span>
          <p class="footer-tagline">Performance testing guides for testers and QA.</p>
        </div>
        <div class="footer-links">
          <a href="/blog/">Posts</a>
          <a href="/tools/">Tools</a>
          <a href="/about/">About</a>
          <a href="https://www.linkedin.com/in/andrew-amin-48763a194/" target="_blank" rel="noopener noreferrer">LinkedIn</a>
        </div>
      </div>
      <div class="footer-bottom">
        <span>JMeter · k6 · Postman · Metrics</span>
      </div>
    </footer>
  </body>
</html>

<style>
  .site-header {
    border-bottom: 1px solid var(--border);
    padding: 0 2rem;
    background: rgba(8, 9, 12, 0.85);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    position: sticky;
    top: 0;
    z-index: 100;
    height: 60px;
    display: flex;
    align-items: center;
  }
  .site-nav {
    display: flex;
    gap: 0;
    align-items: center;
    max-width: 900px;
    margin: 0 auto;
    width: 100%;
  }
  .site-logo {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    font-weight: 700;
    font-size: 1.05rem;
    color: var(--text) !important;
    margin-right: auto;
    text-decoration: none;
  }
  .logo-icon { font-size: 1.1rem; }
  .logo-text { letter-spacing: -0.01em; }
  .nav-links {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    margin-right: 1rem;
  }
  .nav-link {
    color: var(--muted);
    font-size: 0.9rem;
    font-weight: 500;
    padding: 0.3rem 0.65rem;
    border-radius: var(--radius-sm);
    transition: color 0.15s, background 0.15s;
  }
  .nav-link:hover {
    color: var(--text-soft);
    background: var(--surface);
  }
  .nav-link.active {
    color: var(--text);
    background: var(--surface);
  }
  .linkedin-badge {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.35rem 0.75rem;
    background: #0a66c2;
    color: #fff !important;
    border-radius: var(--radius-sm);
    font-size: 0.82rem;
    font-weight: 600;
    transition: background 0.15s, transform 0.15s;
    white-space: nowrap;
    text-decoration: none;
  }
  .linkedin-badge:hover {
    background: #0958a8;
    color: #fff !important;
    transform: translateY(-1px);
  }
  .site-main {
    max-width: 760px;
    margin: 0 auto;
    padding: 3rem 1.5rem 5rem;
  }
  .site-footer {
    border-top: 1px solid var(--border);
    background: var(--bg-elevated);
  }
  .footer-inner {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 2rem 1.25rem;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 2rem;
    flex-wrap: wrap;
  }
  .footer-logo {
    font-weight: 700;
    font-size: 1rem;
    color: var(--text);
    display: block;
    margin-bottom: 0.35rem;
  }
  .footer-tagline {
    margin: 0;
    color: var(--muted);
    font-size: 0.875rem;
  }
  .footer-links {
    display: flex;
    gap: 1.25rem;
    align-items: center;
    flex-wrap: wrap;
  }
  .footer-links a {
    color: var(--muted);
    font-size: 0.875rem;
    transition: color 0.15s;
  }
  .footer-links a:hover { color: var(--text-soft); }
  .footer-bottom {
    border-top: 1px solid var(--border-subtle);
    padding: 1rem 2rem;
    text-align: center;
    color: var(--muted);
    font-size: 0.8rem;
    max-width: 900px;
    margin: 0 auto;
  }

  @media (max-width: 640px) {
    .site-header { padding: 0 1rem; }
    .nav-links { gap: 0; }
    .nav-link { padding: 0.3rem 0.45rem; font-size: 0.85rem; }
    .linkedin-badge span { display: none; }
    .linkedin-badge { padding: 0.35rem 0.5rem; }
    .site-main { padding: 2rem 1rem 4rem; }
    .footer-inner { flex-direction: column; gap: 1.25rem; }
  }
</style>
