---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.filter(p => !p.data.draft).map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}
const { post } = Astro.props;
const { Content } = await post.render();
---
<Layout title={post.data.title} description={post.data.description}>
  <article class="article">
    <h1 class="article-title">{post.data.title}</h1>
    <div class="article-meta">
      <time class="article-date">{post.data.pubDate.toLocaleDateString()}</time>
      {post.data.tags.length > 0 && (
        <ul class="article-tags">
          {post.data.tags.map((tag) => (
            <li><span class="tag">{tag}</span></li>
          ))}
        </ul>
      )}
    </div>
    <div class="prose">
      <Content />
    </div>
  </article>
</Layout>

<style>
  .article { margin-bottom: 3rem; }
  .article-title {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 0.75rem;
    letter-spacing: -0.02em;
    line-height: 1.25;
  }
  .article-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.75rem 1.25rem;
    margin-bottom: 2rem;
  }
  .article-date {
    color: var(--muted);
    font-size: 0.9rem;
  }
  .article-tags {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }
  .tag {
    display: inline-block;
    padding: 0.2em 0.6em;
    font-size: 0.8rem;
    color: var(--text-soft);
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 999px;
  }
</style>
