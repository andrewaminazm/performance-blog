<style>
  .about-page { max-width: 65ch; }

  /* Author card */
  .author-card {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 1.75rem 2rem;
    margin-bottom: 2.5rem;
    flex-wrap: wrap;
  }
  .author-avatar {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--accent) 0%, #4f46e5 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    font-weight: 700;
    color: #fff;
    flex-shrink: 0;
    box-shadow: 0 0 24px var(--accent-glow);
  }
  .author-name {
    font-size: 1.4rem;
    font-weight: 700;
    margin: 0 0 0.2rem;
    letter-spacing: -0.015em;
  }
  .author-role {
    color: var(--muted);
    font-size: 0.9rem;
    margin: 0 0 0.9rem;
  }

  /* LinkedIn button */
  .linkedin-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.45rem;
    padding: 0.4rem 0.9rem;
    background: #0a66c2;
    color: #fff !important;
    border-radius: var(--radius-sm);
    font-size: 0.875rem;
    font-weight: 600;
    transition: background 0.15s, transform 0.15s;
    text-decoration: none;
  }
  .linkedin-btn:hover {
    background: #0958a8;
    color: #fff !important;
    transform: translateY(-1px);
  }
  .linkedin-btn-lg {
    padding: 0.6rem 1.25rem;
    font-size: 0.95rem;
    margin-top: 0.5rem;
  }

  /* Sections */
  .about-section {
    margin-bottom: 2.25rem;
  }
  .about-heading {
    font-size: 1.15rem;
    font-weight: 700;
    margin: 0 0 0.85rem;
    letter-spacing: -0.01em;
    color: var(--text);
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border-subtle);
  }
  .about-section p {
    color: var(--text-soft);
    margin-bottom: 0.9rem;
    line-height: 1.7;
  }

  /* Feature grid */
  .feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 1rem;
  }
  .feature-card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 1.25rem;
    transition: border-color 0.15s, transform 0.15s;
  }
  .feature-card:hover {
    border-color: rgba(124, 106, 247, 0.4);
    transform: translateY(-2px);
  }
  .feature-icon { font-size: 1.5rem; display: block; margin-bottom: 0.6rem; }
  .feature-card h3 {
    font-size: 0.95rem;
    font-weight: 600;
    margin: 0 0 0.4rem;
    color: var(--text);
  }
  .feature-card p {
    font-size: 0.875rem;
    color: var(--text-soft);
    margin: 0;
    line-height: 1.55;
  }

  /* Topics */
  .topics-wrap { display: flex; flex-wrap: wrap; gap: 0.5rem; }
  .topic-tag {
    display: inline-block;
    padding: 0.3rem 0.75rem;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 999px;
    font-size: 0.82rem;
    color: var(--text-soft);
    font-weight: 500;
  }

  .connect-section { padding-top: 0.5rem; }
</style>
